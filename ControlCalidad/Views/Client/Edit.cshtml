@model ControlCalidad.Models.Cliente

@{
    ViewBag.Title = "Edit";
}

<h3 class="text-grey">Editar Cliente</h3>
<div class="margin-b1">
    <hr />
</div>

<div class="row container ">
    <div class="col s12">
        <div class="card hoverable">

            <nav>
                <div class="nav-wrapper black">
                    <p class="col s4">Quality Expert S.A</p>
                </div>
            </nav>

            <div class="margin-b section">

            </div>

            @using (Html.BeginForm())
            {
                List<SelectListItem> provinces = (List<SelectListItem>)ViewBag.provinces;
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.cedulaPK)


                <div class="row">
                    <div class="col s4">
                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">account_circle</i>
                                @Html.LabelFor(model => model.nombreP, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.nombreP, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombreP, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">account_circle</i>
                                @Html.LabelFor(model => model.apellido1, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.apellido1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.apellido1, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">account_circle</i>
                                @Html.LabelFor(model => model.apellido2, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.apellido2, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.apellido2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col s4">
                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">perm_identity</i>
                                @Html.LabelFor(model => model.cedulaPK, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.cedulaPK, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.cedulaPK, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">call</i>
                                @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">mail</i>
                                @Html.LabelFor(model => model.correo, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col s4">
                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">place</i>
                                @if (ViewBag.provinces != null)
                                {
                                    @Html.DropDownList("provincia", provinces, "Seleccione una provincia")
                                }
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">place</i>
                                @Html.DropDownListFor(model => model.canton, new SelectList(" "), "Seleccione un canton", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">place</i>
                                @Html.DropDownListFor(model => model.distrito, new SelectList(" "), "Seleccione un distrito", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s10 offset-s1">
                                <i class="p-size text-grey material-icons prefix">place</i>
                                @Html.LabelFor(model => model.direccionExacta, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.direccionExacta, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.direccionExacta, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>

                <div class="margin-b1">
                </div>

                <div class="row center">
                    @Html.ActionLink("Cancelar", "Details", new { id = Model.cedulaPK }, new { @class = "margin-r waves-effect red-hover btn red accent-4"
               } )
                    <button type="submit" value="Save" class="margin-l btn waves-effect waves-light turq white-text">Guardar</button>
                </div>

                <div class="margin-b section">

                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materializeD")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ajax")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script>

        $(document).ready(function () {
            $("#provincia").change(function () {

                var output = "";
                $.get("/localizations/cantonesList", { provincia: $("#provincia").val() }, function (data) {
                    $('#canton').children().remove().end()
                    $.each(data, function (index, row) {
                        $("#canton").append("<option value='" + row.codigoPK + "'>" + row.nombre + "</option>")
                    });
                    $('select').formSelect();
                });
            })
        });
    </script>
    <script>

        $(document).ready(function () {
            $("#canton").change(function () {

                var output = "";
                $.get("/localizations/districtsList", { provincia: $("#provincia").val(),canton: $("#canton").val() }, function (data) {
                    $('#distrito').children().remove().end()
                    $.each(data, function (index, row) {
                        $("#distrito").append("<option value='" + row.codigoPK + "'>" + row.nombre + "</option>")
                    });
                    $('select').formSelect();
                });
            })
        });
    </script>
}

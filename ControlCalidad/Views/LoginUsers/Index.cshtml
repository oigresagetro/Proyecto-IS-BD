@model IEnumerable<ControlCalidad.Models.AspNetUser>

@*

    @{
        ViewBag.Title = "Index";
    }

*@

<h3 class="text-grey">Usuarios del sistema</h3>
<hr />


<div class="fixed-action-btn">
    <a href="@Url.Action( "Register" , "Account/Register" )" class="btn-floating btn-large turq">
        <i class="large material-icons">add</i>
    </a>
</div>

<div class="card ">
    <table class="table striped ">
        <tr class="">
            <th class="center turq white-text">
                @Html.DisplayNameFor( model => model.UserName )
            </th>
            <th class="center turq white-text">
                @Html.DisplayNameFor( model => model.Email )
            </th>
            <th class="center turq white-text">
                @Html.DisplayNameFor( model => model.Role )
            </th>
            <th class="center turq white-text">
                <p>Acción</p>
            </th>


        </tr>

        @foreach( var item in Model )
        {
            <tr>
                <td class="center">
                    @Html.DisplayFor( modelItem => item.UserName )
                </td>
                <td class="center">
                    @Html.DisplayFor( modelItem => item.Email )
                </td>
                <td class="center">
                    @Html.DisplayFor( modelItem => item.Role )
                </td>


                <td class="center">


                    @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new {
                   @class = "waves-effect waves-light btn turq"
               } )


                </td>
            </tr>

        }

    </table>
</div>
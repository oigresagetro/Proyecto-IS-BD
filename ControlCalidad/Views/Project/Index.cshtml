@model IEnumerable<ControlCalidad.Models.Proyecto>

@*  {
        ViewBag.Title = "Index";
    }
*@

<h3 class="text-grey">Proyectos</h3>
<div class="margin-b1">
    <hr />
</div>
    
<div class="fixed-action-btn">
    <a href="@Url.Action( "Create New" , "Project/Create" )" class="btn-floating btn-large black turq-hover">
        <i class="large material-icons">add</i>
    </a>
</div>

<div class="card">
    <table class="table striped">
        <tr>
            <th class="center black white-text">
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th class="center black white-text">
                @Html.DisplayNameFor(model => model.objetivo)
            </th>
            <th class="center black white-text">
                @Html.DisplayNameFor(model => model.fechaInicio)
            </th>
            <th class="center black white-text">
                @Html.DisplayNameFor(model => model.fechaFin)
            </th>
            <th class="center black white-text">
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th class="center black white-text">
                @Html.DisplayNameFor(model => model.duracionEstimada)
            </th>
            <th class="center black white-text">
                @Html.DisplayNameFor(model => model.duracionReal)
            </th>
            <th class="center black white-text">
                @Html.DisplayName("Nombre Cliente")
            </th>
            <th class="center black white-text">
                @Html.DisplayName("Acción")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.objetivo)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.fechaInicio)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.fechaFin)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.duracionEstimada)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.duracionReal)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.Cliente.nombreP)
                </td>
                <td class="center">
                  
                    @Html.ActionLink("Detalles", "Details", new { id = item.idPK },
                    new { @class =  "waves-effect waves-light btn black turq-hover"}
                    ) 
                </td>
            </tr>
        }

    </table>

</div>

@model ControlCalidad.Models.Requerimiento

@{
    ViewBag.Title = "Create";
}

<h3 class="text-grey">Crear nuevo Requerimiento</h3>
<div class="margin-b1">
    <hr />
</div>

<div class="row container">
    <div class="">
        <div class="card hoverable">
            <nav>
                <div class="nav-wrapper black">
                    <p class="col s4">Quality Expert S.A</p>
                </div>
            </nav>
            <div class="margin-b">

            </div>

            @using( Html.BeginForm( "Create" , "Requirement" , FormMethod.Post , new {
                @onsubmit = "onSubmit()"
            } ) )
            {
                @Html.AntiForgeryToken( )

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group hide">
                    <div class="col-md-10">
                        <input value="@ViewBag.id_proyecto" name="id_proyectoFK" type="text" required class="validate form-control" onblur="" onkeyup="" id="projectId" />
                    </div>
                </div>


                <div class="col s4">
                    <div class="row margin-b">
                        <div class="input-field col s11">
                            <i class="p-size text-grey material-icons prefix">assignment_ind</i>
                            <label for="nombre">Nombre del requerimiento <span class="red-text">  *</span></label>
                            <input name="nombre" type="text" required class="validate form-control" onblur="" onkeyup="" id="requirementName" />
                            <span class="text-error" id="requirementError"></span>
                        </div>
                    </div>

                    <div class="row margin-b">
                        <div class="input-field col s11">
                            <i class="p-size material-icons text-grey prefix">date_range</i>
                            <label for="fechaInicio">Fecha de Inicio <span class="red-text">  *</span></label>
                            <input type="text" class="datepicker" required id="fechaInicio" name="fechaInicio" />
                            @Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-error" })
                        </div>
                    </div>

                    <div class="row margin-b">
                        <div class="input-field col s11">
                            <i class="p-size material-icons text-grey prefix">date_range</i>
                            <label for="fechaFinalizacion">Fecha de Finalización</label>
                            <input type="text" class="datepicker" id="fechaFinalizacion" name="fechaFinalizacion" />
                            @Html.ValidationMessageFor(model => model.fechaFinalizacion , "", new { @class = "text-error" })
                        </div>
                    </div>

                    <div class="row margin-b">
                        <div class="input-field col s11">
                            <i class="p-size material-icons text-grey prefix">date_range</i>
                            <label for="fechaAsignacion">Fecha de Asignación</label>
                            <input type="text" class="datepicker" id="fechaAsignacion" name="fechaAsignacion" />
                            @Html.ValidationMessageFor(model => model.fechaAsignacion , "", new { @class = "text-error" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s4">
                        <div class="row margin-b">
                            <div class="input-field col s11" data-target="dropdownCreate">
                                <i class="p-size material-icons text-grey prefix">info</i>
                                <select name="estado" required id="estado">
                                    <option value="" disabled selected>Seleccione un estado</option>
                                    <option value="No iniciado">No iniciado</option>
                                    <option value="En ejecucion">En ejecución</option>
                                    <option value="Incompleto">Incompleto</option>
                                    <option value="Finalizado Exitoso">Finalizado Exitoso</option>
                                    <option value="Finalizado Incompleto">Finalizado Incompleto</option>
                                    <option value="Cancelado">Cancelado</option>
                                </select>
                                <label for="estado">Estado del Requerimiento <span class="red-text">  *</span></label>
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s11" data-target="dropdownCreate">
                                <i class="p-size material-icons text-grey prefix">info</i>
                                <select name="complejidad" required id="complejidad">
                                    <option value="" disabled selected>Seleccione una complejidad</option>
                                    <option value="Facil">Fácil</option>
                                    <option value="Intermedio">Intermedio</option>
                                    <option value="Dificil">Difícil</option>
                                </select>
                                <label for="complejidad">Complejidad del Requerimiento <span class="red-text">  *</span></label>
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s11">
                                <i class="p-size material-icons text-grey prefix">assignment</i>
                                @Html.LabelFor(model => model.descripcion , htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.descripcion , new { htmlAttributes = new { @class = "validate" } })
                                @Html.ValidationMessageFor(model => model.descripcion , "", new { @class = "text-error" })
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s11">
                                <i class="p-size material-icons text-grey prefix">hourglass_empty</i>
                                <label for="duracionEstimada">Duración Estimada <span class="red-text">  *</span> </label>
                                <input name="duracionEstimada" type="number" required class="validate form-control" onblur="" onkeyup="" id="avrTime" />
                                <span class="text-error" id="avrTimeError"></span>
                            </div>
                        </div>

                        <div class="row margin-b">
                            <div class="input-field col s11">
                                <i class="p-size material-icons text-grey prefix">hourglass_empty</i>
                                <label for="duracionReal">Duración Real  </label>
                                <input name="duracionReal" type="number"class="validate form-control" onblur="" onkeyup="" id="RealDur" />
                                <span class="text-error" id="realDurError"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="hide row container center" id="loading">
                    <div class="">
                        <i class="material-icons text-turq ">info_outline</i>
                    </div>
                    <div class="">
                        <p class="text-turq">
                            Creando... Por favor espere.
                        </p>
                    </div>

                    <div class="progress">
                        <div class="indeterminate"></div>
                    </div>
                </div>

                <div class=" row container center hide " id="complete">
                    <div class="">
                        <i class="material-icons text-turq ">info_outline</i>
                    </div>
                    <div class="">
                        <p class="text-turq">
                            Se creó correctamente.
                        </p>
                    </div>
                </div>

                <div class="margin-required">
                    <p class="text-error">
                        Los campos con * son requeridos.
                    </p>
                </div>

                <div class="margin-b1">
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>

                </div>

            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink( "Back to List" , "Index" )
</div>

@section Scripts {
    @Scripts.Render( "~/bundles/jqueryval" )
}

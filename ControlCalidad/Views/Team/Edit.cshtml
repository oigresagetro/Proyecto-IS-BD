@model ControlCalidad.Models.TrabajaEn

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{


    @Html.AntiForgeryToken()
    @Html.Hidden("CedulaN", "", new { @id = "CedulaN" })
    @Html.Hidden("CedulaT", "", new { @id = "CedulaT" })
    @Html.Hidden("Hability", "", new { @id = "Hability" })
    @Html.Hidden("Proyecto", "", new { Value = ViewBag.id_proyecto, @id = "Proyecto" })


    <div class="form-horizontal">
        <h4>TrabajaEn</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-field col s6">
            <i class="material-icons prefix">search</i>
            <textarea id="hability" class="materialize-textarea"></textarea>
            <label for="icon_prefix2">Buscar por habilidades</label>
        </div>
        <td>Disponibles: </td>
        @Html.DropDownList("nombreP", (IEnumerable<SelectListItem>)ViewBag.disponibles, "Disponibles", new { @class = "form-control", @onChange = "setCedulaN(this)" })
        <div class="form-group">
            @Html.LabelFor(model => model.cedula_empleadoFK, "Equipo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("cedula_empleadoFK", null, "Equipo", htmlAttributes: new { @class = "form-control", @onChange = "setCedulaT(this)" })
                @Html.ValidationMessageFor(model => model.cedula_empleadoFK, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="Asignar" value="Asignar" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="Desasignar" value="Desasignar" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="Buscar" value="Buscar" onclick="getHability()" />
        </div>
    </div>
}
<script>

    //To get selected value an text of dropdownlist
    function setCedulaN(ddlObject) {
        //Selected value of dropdownlist
        var selectedValue = ddlObject.value;
        //Selected text of dropdownlist
        var selectedText = ddlObject.options[ddlObject.selectedIndex].innerHTML;
        $('#CedulaN').val(selectedValue);
    }

    function setCedulaT(ddlObject) {
        //Selected value of dropdownlist
        var selectedValue = ddlObject.value;
        //Selected text of dropdownlist
        var selectedText = ddlObject.options[ddlObject.selectedIndex].innerHTML;
        $('#CedulaT').val(selectedValue);
    }

    function getHability() {
         $('#Hability').val(document.getElementById("hability").value);
    }
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

